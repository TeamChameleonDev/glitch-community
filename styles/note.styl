.note
  margin-bottom: -15px
  width: 95%
  .description-container
    width: calc(100% - 36px)
    position: relative
    display: inline-block
    padding: 8px 10px 20px
    border-radius: 5px
    font-size: 14px
    word-break: break-word
    overflow-x: hidden
    
    &:after
      top: 9px
      right: -10px
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border: solid transparent
      border-width: 5px
      border-left-color: inherit
    textarea
      margin: 0 0 0
      line-height: 20px
    p 
      margin: 14px 0 0
      line-height: 20px
      word-break: break-word
  .user
    float: right

  .dark
    color: white
    textarea
      color: white
      &::placeholder 
        color: white
        opacity: 1
    a
      color: white
      text-decoration: underline
    .content-editable:empty:before
      color: white
      opacity: 1
