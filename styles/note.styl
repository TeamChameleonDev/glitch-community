.note
  position: absolute
  width: 100%
  .description-container
    width: calc(100% - 36px)
    display: inline-block
    padding: 0px 10px
    border-radius: 5px
    font-size: 14px
    min-height: 115px
    margin-bottom: 10px
    word-break: break-word
    margin-bottom: -30px
    &:after
      top: 9px
      right: 26px
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border: solid transparent
      border-width: 5px
      border-left-color: inherit
    textarea
      margin: 14px 0
      line-height: 20px

    p 
      margin-bottom: 0
  .user
    float: right

  .dark
    color: white

    textarea
      color: white