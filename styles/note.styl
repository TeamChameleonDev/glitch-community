.note
  position: absolute
  width: 100%
  display: contents
  
  .description-container
    width: calc(100% - 36px)
    position: relative
    display: inline-block
    padding: 0px 10px
    border-radius: 5px
    font-size: 14px
    word-break: break-word
    margin-bottom: -20px
    &:after
      top: 9px
      right: -10px
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border: solid transparent
      border-width: 5px
      border-left-color: inherit
    textarea
      margin: 14px 0
      line-height: 20px
    p 
      margin-bottom: 0
      word-break: break-word
      &:first-of-type
        overflow-y: scroll
        overflow-x: hidden
        min-height: 80px
        max-height: 160px
  .user
    position: absolute
    top: 0
    right: 0
    float: right

  .dark
    color: white

    textarea
      color: white