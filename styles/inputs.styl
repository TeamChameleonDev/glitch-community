$input-padding = 4px 0px 2px 0px

input
  border-color: input-border
  width: 200px
  // height: 25px
  border-radius: 3px
  border-style: solid
  border-width: 1px
  padding: $input-padding
  padding-left: 10px
  font-size: 13px
  background-repeat: no-repeat
  background-position: right 5px center
  transition: all .1s
  &:focus
    box-shadow: 0px 0px 3px 0px input-border-focused

.pop-over-input
  position: relative
  background-color: transparent
  font-weight: bold
  // padding: 0
  // padding-bottom: 2px
  // line-height: 17px
  border: none
  border-bottom: 1px solid secondary
  width: 100%
  color: primary

.pop-over-search
  width: 100%
  margin-left: 0
  background-color: primary-background
  border-color: input-border
  font-weight: normal
  // background-image: none
  padding-left: 6px
  // padding-bottom: initial
  border: 1px solid input-border