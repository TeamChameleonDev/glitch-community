// more-ideas.styl

more-ideas-box-radius = 5px

.more-ideas
  margin-top: 1rem
  ul
    padding: 0
    margin-bottom: 0
  .more-ideas-box-link
    color: primary

  li
    display: inline-block
    list-style-type: none
    margin-bottom: 10px
    width: 19%
    margin-right: 10px
    &:hover
      .more-ideas-box-label
        text-decoration: underline
    @media (max-width: 1097px)
      width: 18.5%
    @media (max-width: largeViewport)
      width: 23.5%
    @media (max-width: 739px)
      width: 31.5%
    @media (max-width: 605px)
      width: 30%
    @media (max-width: 500px)
      width: 46%

  .more-ideas-box
    background-color: lightgrey
    height: 122px
    border-top-left-radius: more-ideas-box-radius
    border-top-right-radius: more-ideas-box-radius
    > span
      display: block
      width: 80%
      height: 75%
    svg
      width: 100%
      height: 100%
    @media (max-width: smallViewport)
      height: 115px

  .more-ideas-box-label
    background-color: lightgrey
    height: 37px
    font-size: 14px
    font-weight: 600
    border-bottom-left-radius: more-ideas-box-radius
    border-bottom-right-radius: more-ideas-box-radius
    
  .white
    color: white