.what-is-glitch
  height: 470px
  figure
    position: relative
    width: 45%
    height: 350px
    margin-top: 55px
    float: left
    img
      height: 100%
    h1
      position: absolute
      top: 51px
      right: 24px
      color: white
  .callouts
    width: 43%
    float: right
    display: inline
    margin-right: 50px
    .callout
      position: relative
      &.discover
        .title
          background: #B8AFFF
        .window
          top: 85px
          left: 63px
      &.remix
        .title
          background: #FFAABF
        .badge
          top: 101px
          right: 20px
        .window
          top: 195px
          right: 25px
      &.collaborate
        .title
          background: #FCF3B0
        .badge
          top: 375px
          right: 132px
        .window
          top: 300px
      img
        position: absolute
      .window
        position: absolute
        width: 265px
        .title
          margin: 0
          padding: 10px 15px
          border: 3px solid black
          border-top-right-radius: 5px
          border-top-left-radius: 5px
          font-weight: 600
          .dot
            width: 15px
            height: 15px
            border-radius: 10px
            border: 3px solid black
            float: right
            margin: 0px 1px
            &.green
              background: #05D458
            &.yellow
              background: #FCF3B0
            &.red
              background: #FF5F5F
            
        .description
          background: white
          padding: 15px 15px 25px
          border-left: 3px solid black
          border-bottom: 3px solid black
          border-right: 3px solid black
          border-bottom-left-radius: 5px
          border-bottom-right-radius: 5px

  .free
    width: 55px
    vertical-align: sub

  .video
    display: inline-block
    border: 0
    font-weight: normal
    font-size: 1em
    color: link
    cursor: pointer
    .play-button
      vertical-align: -6px
      margin-right: 5px
      margin-left: 2px
    &:hover
      text-decoration: underline

  p
    margin: 0