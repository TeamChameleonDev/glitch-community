body
  font-family: sansserif
  color: primary
  margin: 0
  overflow-x: hidden

h1
  font-weight: bold
  font-size: 22px

h2
  font-weight: bold
  font-size: 18px
  a
    color: primary

h3
  font-size: 16px

h4
  font-size: 14px
    
p
  line-height: 20px

a, .link
  color: link
  text-decoration: none
  &:hover
    text-decoration: underline

hr
  background-color: section-line
  height: 1px
  border: none

main,
section
  clear: both

section,
article
  margin-top: 1rem
  margin-bottom: 1rem

section
  margin-top: 2rem
