monospace = Menlo, Consolas, Monaco, "Lucida Console", Monospace
sansserif = "Benton Sans", Helvetica, Sans-serif

primary = #222
secondary = #C3C3C3
tertiary = #636363
primary-background = white
secondary-background = #F5F5F5
secondary-background-hover = #EAEAEA
secondary-background-active = #eceff3
secondary-hover-on-color = rgba(255,255,255,0.6)
text-on-secondary-background = tertiary
line-on-secondary-background = #B8B8B8
input-border = #CCC
input-border-focused = #A2D7FF
general-label-background = #FFD1C7
overlay-background = rgba(255, 255, 255, 0.8)
cta = #83ffcd
link = #3652D3
general-link =  #244776
section-line = #E5E5E5

body
  font-family: sansserif
  color: primary
  margin: 0
  overflow-x: hidden

h1
  font-weight: bold
  font-size: 22px

h2
  font-weight: bold
  font-size: 18px
  a
    color: primary

h3
  font-size: 16px

h4
  font-size: 14px
    
p
  line-height: 20px

a, .link
  color: link
  text-decoration: none
  &:hover
    text-decoration: underline

hr
  background-color: section-line
  height: 1px
  border: none

main,
section
  clear: both

section,
article
  margin-top: 1rem
  margin-bottom: 1rem

section
  margin-top: 2rem
