details.overlay-container
  display: inline-block
  > summary
    list-style: none
    &::-webkit-details-marker
      display: none
    &::before
      display: none
  &[open] > summary::after
    content: ''
  &:not([open]) > :not(summary)
    display: none

details.overlay-container[open] > summary::after
.overlay-background
    // overflow: scroll
    overflow-x: auto
    -webkit-overflow-scrolling: touch
    background-color: overlay-background
    width: 100%
    height: 100%
    position: fixed
    top: 0
    left: 0
    z-index: 10
    cursor: default

// wistia embed styling
.video-overlay
  .wistia_responsive_padding
    padding: 56.25% 0 0 0
    position: relative

  .wistia_responsive_wrapper
    height: 100%
    left: 0
    position: absolute
    top: 0
    width: 100%

  .wistia_embed
    height: 100%
    width: 100%
  .button
    display: inline

// user settings overlay
.account-settings-overlay
  .overlay-title
    width: 100%
  .pop-over-main
    display: grid
    grid-gap: 10px
    grid-template-columns: 0.5fr 1fr
    @media(max-width: smallViewport)
      display: initial
      
    .nav-selection
      border-right: 1px solid section-line
      
    .nav-content
      margin-bottom: 1.5em
      h2
        margin-top: 0
      label
        width: 250px
        margin-bottom: 10px  
        margin-bottom: 10px   
      .pw-strength
        display: block
        margin-top: -5px
        margin-bottom: 5px
        .note
          color: tertiary
      progress
        &.pw-strength
          width: 75%
          display: inline-block
          vertical-align: -webkit-baseline-middle
        &.score-0, &.score-1, &.score-2, &.score-3, &.score-4
          background: secondary-background
        &.score-0::-webkit-progress-value
          background-color: warning
        &.score-1::-webkit-progress-value, &.score-2::-webkit-progress-value
          background-color: notification
        &.score-3::-webkit-progress-value
          background-color: success
      .pw-strength-word
        float: right
        margin-top: -4px
      .info-description
        margin-bottom: 0.5rem
        color: tertiary
