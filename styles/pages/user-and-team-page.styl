.user-page, .team-page
  // permit a 2-column layout on user and team pages
  // in-between mediumViewport and largeViewport
  .projects-container,
  .collections-container
    row-gap: 1.5rem
    @media (min-width: mediumViewport)
      grid-template-columns: 1fr 1fr

    @media (min-width: largeViewport)
      grid-template-columns: 1fr 1fr 1fr
      
  .glitch-embed-wrap
    width: 100%
    height: 500px
    iframe
      width: 100%
      height: 100%
      border: none
      
  .projects, .collections
    padding: 0
    margin-bottom: 1.5rem
    overflow: visible
    display: inline-block
    
    &.filtering
      min-height

    .project-options
      display: block
      
.team-page
  section
    position: relative

.clear-session
  position: absolute
  top: 16px
  right: 16px