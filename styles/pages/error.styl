// This file will eventually power error.jsx, which can be reused across our error pages.
// for now, we're in transition to a new error page design, so this file is in three parts:

//part one, the deprecated error page:
.error-page
  color: white
  font-family: menlo
  font-weight: bold
  padding-left: 15px
  padding-right: 15px
  font-size: 80%
  position: relative
  height: 100vh
  max-width: 100%
  
  .container
    margin-top: calc(20%)
    text-align: center
    max-width: 425px
    margin-left: auto
    margin-right: auto

  h1
    margin-bottom: 2rem

  h2
    font-weight: normal

  .actions
    margin-top: 3em

    .button
      font-family: sans-serif

    .support-link
      color: warning

  #stars
    position: fixed
    top: 0
    left: 0
    z-index: -1
    background-color: black

// part two, the seeds of the new error page.
// Things will converge on these styles:
    
.error-page-container
  display: flex
  align-items: center
  justify-content: center
  .error-image
    display: none
  .error-msg 
    background: secondary-background 
    border: 3px solid black
    border-radius: 10px
    *
      margin: 20px

@media(min-width: 700px)
  .error-page-container
    padding-top: 10em;
    padding-bottom: 10em;
    .error-msg
    .error-image
      display: block
      margin-right: 3em;

      
// styles for index.ejs:
// To be consolidated with the above styles, once all error pages are in.
// There will always be a little special sauce here, since these styles have to work
// in a no-react environment.
#fallback
  #fallback-img
    padding: calc(20%) 0
    margin: 0 auto
  .error-msg 
    background: secondary-background 
    border: 3px solid black
    border-radius: 10px
    *
      margin: 20px

@media(min-width: 700px)
  #fallback
    main
      width: 700px
      position: absolute
      top: 40%
      left: 50%
      transform: translate(-50%, -40%)
    #fallback-img
      padding: 0
      float: left
      margin-right: 40px
    .error-msg
      float: left
      width: 350px
      margin-top: 65px
