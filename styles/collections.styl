collection-avatar-size = 55px
collection-padding = 12px 

.project-badge
  display: inline-block
  width: 22px
  height: 20px
  margin-right: 4px
  border-radius: 3px
  background-position: center
  background-repeat: no-repeat
  vertical-align: middle
  &.private-project-badge
    background-color: private
    background-image: url('https://cdn.glitch.com/f7224274-1330-4022-a8f2-8ae09dbd68a8%2Fprivate.svg?1496253541539')
  &.public-project-badge
    opacity: 0.7
    background-image: url('https://cdn.glitch.com/26aa7be9-76e2-4f1c-a3e4-6a41ddcec98f%2Fpublic.svg?1528830915543')
    
.user-page,
.team-page,
.category-page
  .category
    float: none
    width: initial

.collection-options
  padding: 10px
  padding-bottom: 8px
  background-color: white
  border-radius: 5px
  border: 0
  z-index: 1
  &:focus
    outline: transparent
    background: #efefef
    
article.collection-wide
  header.collection
    width: 25%
    @media(max-width: largeViewport)
      width: 100%
    padding: 16px
    margin: 0
    .collection-image-container
      margin: 0 0 15px
      svg
        width: 85px
        height: 75px
    .collection-name h2
      margin-bottom: 0
  .collection-contents
    padding-left: 20px
    display: flex
    flex-flow: column
    .collection-view-all
      margin-top: 1rem
      display: block
      clear: both
      flex-grow: 1
  .hide-description
     height: auto
