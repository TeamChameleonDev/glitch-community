.users-container,
.teams-container
  margin: 0
  padding: 0
  list-style-type: none
  display: flex
  flex-wrap: wrap

  > li
    // float: left
    display: block
    margin-right: 10px
    margin-bottom: 1rem
    position: relative
    width: calc(33.3% - 10px)
    @media (max-width: largeViewport)
      width: calc(50% - 10px)
    @media (max-width: 592px)
      width: 100%

  a
    color: primary
    &:hover
      text-decoration: none 
      
  .item
    border-radius: 5px
  .cover
    width: 100%
    height: 10px
    border-top-right-radius: 5px
    border-top-left-radius: 5px
    
  .content
    margin-top: 0
    padding: 12px
    background-color: section-line
    border-bottom-right-radius: 5px
    border-bottom-left-radius: 5px    
    overflow: hidden

  .avatar
    display: inline-block
    width: 30%
    max-width: 75px
    height: auto
    margin-right: 4%
    overflow: hidden

  .information
    display: inline-block
    vertical-align: top
    width: 64%
    
    .button, button
      margin-bottom: 0.3em
      max-width: 100%
      overflow-wrap: break-word

    .name
      font-size: 14px
      margin-top: 0
      max-width: 100%
      overflow-wrap: break-word

    p
      margin-top: 0.8em
      margin-bottom: 0
      font-size: 14px

    .thanks
      .emoji
        margin-left: 3px
        width: 18px
        height: 18px

  .description
    font-size: 14px
    margin-top: 0
    margin-bottom: 0
    overflow: hidden
    a
      color: link
      &:hover
        text-decoration: underline
  .users
    display: block
    margin-top: 0rem
    margin-bottom: 0
    padding-top: 0.25rem
    max-height: 55px
    
    img
      width: 25px 
      height: 25px 
      
  .verified
    vertical-align: -5px

.users-container
  .name
    color: tertiary
  .avatar
    border-radius: 50%