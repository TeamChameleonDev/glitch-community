.button,
button
  text-align: left
  font-size: 14px
  line-height: 14px
  font-weight: 600
  background-color: white
  border: solid primary 2px
  display: inline-block
  border-radius: 5px
  padding: 6px 12px
  padding-bottom: 5px
  cursor: pointer
  position: relative
  vertical-align: middle
  &.danger-zone
    &:hover, &:focus
      background-color: warning-background
  &:hover, &:focus
    background-color: secondary-background
    text-decoration: none
  &:active,
  &.active
    background-color: secondary-background-active
    color: primary
  &.has-emoji
    padding-top: 5px
    padding-bottom: 5px
  img
    vertical-align: bottom

  &[disabled]
    opacity: .5
    pointer-events: none
    cursor: pointer
    color: primary 

.button-link
  color: primary

.button-tertiary
  color: tertiary
  border-width: 1px
  border-color: secondary
  cursor: pointer
  display: inline-block
  .loader
    width: 13px
    height: 13px
    margin-right: 0
  &:hover, &:focus
    color: primary
    border-color: line-on-secondary-background

.button-on-secondary-background
  color: text-on-secondary-background
  border-color: line-on-secondary-background
  background-color: secondary-background
  &:hover
    color: primary
    background-color: secondary-background-active
  &:active,
  &:focus
    border-color: primary

button.link
  vertical-align: unset
