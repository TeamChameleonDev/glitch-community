@import '../../components/constants.styl';

u0 = 2px
u05 = 4px
u1 = 5px
u2 = 10px
u3 = 16px
u4 = 32px
u5 = 50px

html
  background: #f5f5f5
.main
  max-width: 1000px
  margin: auto
  
// shared
.h2
  font-size: 28px
.h3
  font-size: 22px
.mark
  display: inline-block
  transform: rotate(-1deg)
  position: relative
  left: "-%s" % u1
  z-index: 0
  background-color: var(--mark-color)
  padding: u05 u2
  border-radius: u1
  line-height: 1
.markText
  position: relative
  display: inline-block
  transform: rotate(1deg)
.unmarked
  position: relative
  z-index: 1
.sectionDescription
  margin-left: 40px
  @media (max-width: largeViewport)
    margin-left: 30px

// banner
.banner
  display: flex
  @media (max-width: mediumViewport)
    flex-wrap: wrap
.bannerText
  position: relative
  // flex-basis: 50%
  background-image: url('https://cdn.glitch.com/50f784d9-9995-4fa4-a185-b4b1ea6e77c0%2Fshape-pattern.svg?v=1561146220750')
  background-repeat: no-repeat
  background-size: contain
  width: 100%
  height: 360px
  > *
    position: absolute
    max-width: 250px
  p
    width: 250px
    left: 140px
    bottom: 100px
.bannerTagline
  left: 110px
  top: 30px
  font-size: 32px
  transform: rotate(-5deg)
.bannerIllustration
  img
    max-width: 350px
  @media (max-width: mediumViewport)
    flex-basis: 100%
    order: -1
.bannerRemixBtn
  bottom: 65px
  right: 110px
  
// what is glitch
.whatIsGlitch
  display: flex
  @media (max-width: mediumViewport)
    flex-wrap: wrap
.whatIsGlitchDescription
  max-width: 470px
  margin: 60px 40px
  padding-right: 20px
  @media (max-width: largeViewport)
    margin: 20px 0 0 30px
    max-width: 500px
.whatIsGlitchVideo
  background: #000
  width: 700px
  height: 325px
  border: 7px solid #fff
  box-shadow: 0 0 2px rgba(0, 0, 0, .35);
  @media (max-width: largeViewport)
    height: 350px
  @media (max-width: mediumViewport)
    width: 100%
    margin: auto
    height: 250px
    order: -1

// starter apps
.startersSection
  min-height: 250px
.startersGrid
  display: grid
  grid-template-columns: 1fr
  grid-gap: u3
  max-width: 260px
  margin: u5 auto
  @media (min-width: mediumSmallViewport)
    grid-template-columns: 1fr 1fr
    max-width: initial
    margin-left: 40px
  @media (min-width: mediumLargeViewport)
    grid-template-columns: 1fr 1fr 1fr
    margin-left: initial
  @media (min-width: hugeViewport)
    grid-template-columns: 1fr 1fr 1fr 1fr
.startersInfo
  grid-row: 1 / span 2
  background-repeat: no-repeat
  background-size: contain
  width: 300px
  min-height: 250px
  margin-bottom: -50px
  padding: 50px 40px
  @media (min-width: mediumSmallViewport)
    margin-left: -40px
    width: 270px
  @media (min-width: mediumLargeViewport)
    width: 250px
    padding: 40px
    grid-row: 1 / span 3
    margin-left: initial
  p
    max-width: 200px
  h3
    max-width: 200px
.startersHeading
  margin: 0 0 u2 0
.startersDescription
  max-width: 400px
  margin-top: 0
.frameworkStarter
  display: flex
  align-items: center
  list-style: none
  margin-bottom: u2
  h4
    font-size: 16px
    line-height: 1
    margin: 0 0 u2 0
.frameworkLogo
  display: inline-flex
  align-items: center
  justify-content: center
  width: 75px
  height: 75px
  margin-right: u2
  background: var(--color)
  border-radius: 50%
  vertical-align: middle
  img
    width: 45px
    height: auto
.platformStarter
  display: flex
  flex-wrap: nowrap
  padding: u2
  border-radius: u05
.platformLogo
  margin-right: u2
  img
    width: 45px
    height: 45px
    border-radius: 0
.platformLink
  margin-bottom: u2
  
// collaborate + your app is live
.screencapDescription
  max-width: 570px
.screencapContainer
  position: relative
  margin: u3 auto
  @media (min-width: mediumViewport)
    margin: u4 40px u2 40px
  video
    max-width: 100%
.screencapImageContainer
  position: absolute
  right: -10px
  bottom: -10px
  width: 100px
  height: 100px
  @media (min-width: mediumLargeViewport)
    width: 170px
    height: 170px
    right: -50px
    bottom: -50px
.screencapBlob
.screencapImage
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
.screencapImage
  z-index: 2
  right: 20px
.mic
  right: 20px
  bottom: 10px
  @media (min-width: mediumLargeViewport)
    right: 50px
.screencapHighlights
  display: flex
  flex-wrap: wrap
  max-width: 80%
  @media (min-width: mediumViewport)
    margin: 0 40px
.screencapHighlight
  margin: u2 0 0 0
  padding: u2
  height: 0%
  flex-shrink: 0
  max-width: 100%
  background: secondary-background-hover
  border-radius: u05
  + .screencapHighlight
    margin-top: 0
  @media (min-width: largeViewport)
    margin: 0 u2 0 0
    flex-wrap: nowrap
    max-width: 500px
    
// help
.helpLinks
  display: flex
  flex-wrap: wrap
  position: relative
  margin-top: u2
  > div
    margin-right: u4
    max-width: 70%
  @media (min-width: mediumViewport)
    max-width: 80%
    flex-wrap: nowrap
    margin-left: 40px
    > div
      max-width: 100%
  h3
    font-weight: 600
.helpImage
  @media (max-width: mediumViewport)
    top: 50%
    right: 0
    transform: translateY(-50%)
  