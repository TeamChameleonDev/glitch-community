@import '../../components/constants.styl';

u0 = 2px
u05 = 4px
u1 = 5px
u2 = 10px
u3 = 16px
u4 = 32px
u5 = 50px

html
  background: #f5f5f5

.mark
  display: inline-block
  transform: rotate(-1deg)
  position: relative
  left: "-%s" % u1
  z-index: 0
  background-color: var(--mark-color)
  padding: u0 u2
  border-radius: u1
.markText
  position: relative
  display: inline-block
  transform: rotate(1deg)
.unmarked
  position: relative
  z-index: 1
  
.main
  max-width: 900px
  margin: auto
  
.banner
  display: flex
  min-height: 360px
.bannerTagline
  max-width: 250px
  font-size: 32px
  transform: rotate(-5deg)
.bannerText
  display: inline-flex
  flex-basis: 50%
  flex-direction: column
  align-items: flex-end
  padding: 30px 85px 0 0
