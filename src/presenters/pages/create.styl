@import '../../components/constants.styl';

u0 = 2px
u05 = 4px
u1 = 5px
u2 = 10px
u3 = 16px
u4 = 32px
u5 = 50px

html
  background: #f5f5f5
.main
  padding: 1rem 2rem 3rem 2rem
  max-width: 1100px
  margin: auto
.section + .section
  margin-top: 60px
  &.remix
    margin-top: 100px
  
// shared
.h2
  font-size: 28px
.h3
  font-size: 22px
.mark
  display: inline-block
  transform: rotate(-1deg)
  position: relative
  left: "-%s" % u1
  z-index: 0
  background-color: var(--mark-color)
  padding: u05 u2
  border-radius: u1
  line-height: 1
.markText
  position: relative
  display: inline-block
  transform: rotate(1deg)
.unmarked
  position: relative
  z-index: 1
.sectionDescription
  margin-left: 40px
  @media (max-width: largeViewport)
    margin-left: 30px

// banner
.banner
  display: flex
  flex-wrap: wrap
  @media (min-width: mediumLargeViewport)
    flex-wrap: nowrap
  @media (min-width: largeViewport)
    padding: 0 u4
.bannerShape
  position: relative
  flex: 100%
  background-repeat: no-repeat
  background-size: contain
  width: 100vw
  height: 300px
  margin-left: -2rem
  @media (min-width: 500px)
    margin-left: u4
    height: 350px
  @media (min-width: mediumSmallViewport)
    height: 360px
  @media (min-width: mediumViewport)
    flex: 2
    margin-left: -2rem
  @media (min-width: mediumLargeViewport)
    margin-left: 0
    flex: 1.5
  @media (min-width: hugeViewport)
    flex: 2.2
.bannerText
  position: absolute
  left: 70px
  top: 25px
  max-width: 250px
  p
    margin-left: u4
    font-size: 15px
    @media (min-width: mediumViewport)
      margin-left: 0
      font-size: inherit
  @media (min-width: smallViewport)
    left: 100px
    top: 25px
  @media (min-width: mediumSmallViewport)
    left: 120px
    top: 30px
.bannerTagline
  font-size: 32px
  transform: rotate(-5deg)
.bannerIllustration
  flex: 100%
  order: -1
  text-align: center
  z-index: 3
  margin-bottom: -40px
  @media (min-width: mediumSmallViewport)
    img
      max-width: 90%
  @media (min-width: mediumViewport)
    flex: 1.5
    order: 0
    margin-bottom: 0
    img
      max-width: 100%
      padding: 0 u3
  @media (min-width: mediumLargeViewport)
    img
      padding: 0 u4
  @media (min-width: hugeViewport)
    flex: 3
    img
      max-width: 95%
      padding: 0 u5
.bannerRemixBtn
  width: 100%
  margin: 25px 0 0 95px

// what is glitch
.whatIsGlitch
  display: flex
  @media (max-width: mediumViewport)
    flex-wrap: wrap
.whatIsGlitchDescription
  max-width: 470px
  margin: 60px 40px
  padding-right: 20px
  @media (max-width: largeViewport)
    margin: 20px 0 0 30px
    max-width: 500px
.whatIsGlitchVideo
  background: #000
  width: 700px
  height: 325px
  border: 7px solid #fff
  box-shadow: 0 0 2px rgba(0, 0, 0, .35);
  @media (max-width: largeViewport)
    height: 350px
  @media (max-width: mediumViewport)
    width: 100%
    margin: auto
    height: 250px
    order: -1

// starter apps
.startersSection
  min-height: 250px
.startersGrid
  display: grid
  grid-template-columns: 1fr
  grid-gap: u3
  max-width: 260px
  margin: u5 auto
  @media (min-width: mediumSmallViewport)
    grid-template-columns: 1fr 1fr
    max-width: initial
    margin-left: 40px
  @media (min-width: mediumLargeViewport)
    grid-template-columns: 1fr 1fr 1fr
    margin-left: initial
  @media (min-width: hugeViewport)
    grid-template-columns: 1fr 1fr 1fr 1fr
.startersInfo
  grid-row: 1 / span 2
  background-repeat: no-repeat
  background-size: contain
  width: 300px
  min-height: 250px
  margin-bottom: -50px
  padding: 50px 40px
  @media (min-width: mediumSmallViewport)
    margin-left: -40px
    width: 270px
  @media (min-width: mediumLargeViewport)
    width: 250px
    padding: 40px
    grid-row: 1 / span 3
    margin-left: initial
  p
    max-width: 200px
  h3
    max-width: 200px
.startersHeading
  margin: 0 0 u2 0
.startersDescription
  max-width: 500px
  margin-top: 0
.frameworkStarter
  display: flex
  align-items: center
  list-style: none
  margin-bottom: u2
  h4
    font-size: 16px
    line-height: 1
    margin: 0 0 u2 0
.frameworkLogo
  display: inline-flex
  align-items: center
  justify-content: center
  width: 75px
  height: 75px
  margin-right: u2
  background: var(--color)
  border-radius: 50%
  vertical-align: middle
  img
    width: 45px
    height: auto
.platformStarter
  display: flex
  flex-wrap: nowrap
  padding: u2
  border-radius: u05
.platformLogo
  margin-right: u2
  img
    width: 45px
    height: 45px
    border-radius: 0
.platformLink
  margin-bottom: u2
  
// collaborate + your app is live
.screencapDescription
  max-width: 570px
.screencapContainer
  position: relative
  margin: u3 auto
  @media (min-width: mediumViewport)
    margin: u4 40px u2 40px
  video
    max-width: 100%
.screencapImageContainer
  position: absolute
  right: -10px
  bottom: -10px
  width: 100px
  height: 100px
  @media (min-width: mediumLargeViewport)
    width: 170px
    height: 170px
    right: -50px
    bottom: -50px
.screencapBlob
.screencapImage
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
.screencapImage
  z-index: 2
  right: 20px
.mic
  right: 20px
  bottom: 10px
  @media (min-width: mediumLargeViewport)
    right: 50px
.bigScreencap
  display: none
@media (min-width: mediumViewport)
  .smallScreencap
    display: none
  .bigScreencap
    display: block
.screencapHighlights
  display: flex
  flex-wrap: wrap
  max-width: 80%
  @media (min-width: mediumViewport)
    margin: 0 40px
.screencapHighlight
  margin-bottom: u2
  padding: u2
  height: 0%
  flex-shrink: 0
  max-width: 100%
  background: secondary-background-hover
  border-radius: u05
  + .screencapHighlight
    margin-top: 0
  @media (min-width: largeViewport)
    margin-right: u2
    flex-wrap: nowrap
    max-width: 500px
    
// help
.helpLinks
  display: flex
  flex-wrap: wrap
  position: relative
  margin-top: u4
  hr
    display: none
    margin: u4 0
    background: secondary-background-hover
    width: 60%
  h3
    margin-top: 0
    font-weight: 600
  @media (min-width: mediumSmallViewport)
    hr
      display: block
    > div
      flex: 100%
      margin-right: u4
      max-width: 70%
      margin-right: 30px
  @media (min-width: largeViewport)
    max-width: 100%
    flex-wrap: nowrap
    margin-left: 40px
    hr
      display: none
    > div
      flex: initial
      max-width: 40%
    h3
      margin-top: initial
.helpImage
  position: relative
  margin: u4 auto
  width: 140px
  @media (min-width: mediumSmallViewport)
    position: absolute
    top: 50%
    right: 0
    transform: translateY(-50%)
    width: 160px
    margin: 0
  @media (min-width: largeViewport)
    top: initial
    bottom: 0
    right: 0
    transform: none
.ambulance
  bottom: 30px
  width: 90px
  @media (min-width: mediumViewport)
    width: 100px
  
// remix
.remix
  text-align: center
.remixAppTabs
  display: flex
  margin-top: u4
  overflow-x: auto
  padding: 0
.remixAppTab
  display: inline-flex
  align-items: center
  list-style: none
  background: secondary-background-hover
  border-radius: u05
  padding: u1 u2
  cursor: pointer
  height: 0%
  flex-shrink: 0
  @media (min-width: hugeViewport)
    flex: 1
  &:not(:last-child)
    margin-right: u3
  img
    margin-right: u2
    height: auto
  &[aria-selected="true"]
    background: #2C4772
    color: #fff
.embedContainer
  iframe
    height: 300px
    @media (min-width: mediumViewport)
      height: 500px
    @media (min-width: largeViewport)
      height: 600px
.embedRemixBtn
  margin-top: u2
  text-align: center
  
// categories
.categories
  text-align: center
.categoriesGrid
  display: grid
  grid-gap: u3
  padding: 0
  grid-template-columns: repeat(2, 1fr)
  @media (min-width: mediumViewport)
    grid-template-columns: repeat(4, 1fr)
  @media (min-width: largeViewport)    
    grid-template-columns: repeat(8, 1fr)
.categoriesGridItem
  list-style: none
  text-align: center
  background: var(--bgColor);
  border-radius: u05
  font-size: 12px
  font-weight: 600
  a
    display: block
    width: 100%
    height: 100%
    padding: u2 u1 u1 u1
    color: inherit
  img
    display: block
    max-width: 60px
    height: 50px
    margin: 0 auto u1 auto