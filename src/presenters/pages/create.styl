@import '../../components/constants.styl';

u0 = 2px
u05 = 4px
u1 = 5px
u2 = 10px
u3 = 16px
u4 = 32px
u5 = 50px

html
  background: #f5f5f5
.main
  max-width: 1000px
  margin: auto
  
// shared
.h2
  font-size: 28px
.h3
  font-size: 22px
.mark
  display: inline-block
  transform: rotate(-1deg)
  position: relative
  left: "-%s" % u1
  z-index: 0
  background-color: var(--mark-color)
  padding: u05 u2
  border-radius: u1
  line-height: 1
.markText
  position: relative
  display: inline-block
  transform: rotate(1deg)
.unmarked
  position: relative
  z-index: 1
.sectionDescription
  margin: 60px 40px

// banner
.banner
  display: flex
  @media (max-width: mediumViewport)
    flex-wrap: wrap
.bannerText
  position: relative
  // flex-basis: 50%
  background-image: url('https://cdn.glitch.com/50f784d9-9995-4fa4-a185-b4b1ea6e77c0%2Fshape-pattern.svg?v=1561146220750')
  background-repeat: no-repeat
  background-size: contain
  width: 100%
  height: 360px
  > *
    position: absolute
    max-width: 250px
  p
    width: 250px
    left: 140px
    bottom: 100px
.bannerTagline
  left: 110px
  top: 30px
  font-size: 32px
  transform: rotate(-5deg)
.bannerIllustration
  img
    max-width: 350px
  @media (max-width: mediumViewport)
    flex-basis: 100%
    order: -1
.bannerRemixBtn
  bottom: 65px
  right: 110px
  
// what is glitch
.whatIsGlitch
  display: flex
  @media (max-width: mediumViewport)
    flex-wrap: wrap
.whatIsGlitchDescription
  max-width: 470px
  margin: 60px 40px
  padding-right: 20px
  @media (max-width: largeViewport)
    margin: 20px 0 0 30px
    max-width: 500px
.whatIsGlitchVideo
  background: #000
  width: 700px
  height: 325px
  border: 7px solid #fff
  box-shadow: 0 0 2px rgba(0, 0, 0, .35);
  @media (max-width: largeViewport)
    height: 350px
  @media (max-width: mediumViewport)
    width: 100%
    margin: auto
    height: 250px
    order: -1

.startersSection
  min-height: 250px
.startersGrid
  display: grid
  grid-template-columns: 1fr
  grid-gap: u3
  max-width: 260px
  margin: auto
  @media (min-width: mediumSmallViewport)
    grid-template-columns: 1fr 1fr
    max-width: initial
    margin-left: 40px
  @media (min-width: mediumLargeViewport)
    grid-template-columns: 1fr 1fr 1fr    
  @media (min-width: largeViewport)
    grid-template-columns: 1fr 1fr 1fr 1fr
  + .startersGrid
    margin-top: u5
.startersInfo
  grid-row: 1 / span 2
  background-repeat: no-repeat
  background-size: contain
  width: 300px
  margin-bottom: -50px
  padding: 20px
  @media (min-width: mediumSmallViewport)
    margin-left: -40px
  @media (min-width: mediumLargeViewport)
    grid-row: 1 / span 3
    width: 270px
    margin-left: initial
    padding: 50px 20px 40px 40px
  p
    max-width: 200px
  h3
    max-width: 200px
.startersHeading
  margin: 0 0 u2 0
.startersDescription
  max-width: 400px
  margin-top: 0
.frameworkStarter
  display: flex
  align-items: center
  list-style: none
  margin-bottom: u2
  h4
    font-size: 16px
    line-height: 1
    margin: 0 0 u2 0
.frameworkLogo
  display: inline-flex
  align-items: center
  justify-content: center
  width: 75px
  height: 75px
  margin-right: u2
  background: var(--color)
  border-radius: 50%
  vertical-align: middle
  img
    width: 45px
    height: auto
.platformStarter
  display: flex
  flex-wrap: nowrap
  padding: u2
  border-radius: u05
.platformLogo
  margin-right: u2
  img
    width: 45px
    height: 45px
    border-radius: 0
.platformLink
  margin-bottom: u2