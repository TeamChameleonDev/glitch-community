.container
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  margin: 20px 0

.errorImage
  margin-bottom: 3em
  
.emailErrorImage
  margin-bottom: 3em
  max-width: 72%  

.errorMessage
  background: secondary-background 
  border: 3px solid black
  border-radius: 10px
  *
    margin: 20px

@media(min-width: 700px)
  .container
    padding-top: 10em
    padding-bottom: 10em
    flex-direction: row
  .errorImage
    margin-right: 3em
  .emailErrorImage
    margin-right: 3em
    margin-right: 0
  .errorMessage
    margin-top: 0
