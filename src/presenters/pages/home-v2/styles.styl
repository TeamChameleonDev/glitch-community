@import './constants.styl'

.h2
  font-size: t5
  margin: 0 0 u3
  
.h3
  font-size: t4
  margin: 0 0 u3
  font-weight: 600
  
.h4
  font-size: t3
  font-weight: 600

.homeContainer
  section + section
    margin-top: 5em 
    
.subtitle
  margin-left: u3
  margin-bottom: u2
  @media(min-width: mediumViewport)
    margin-bottom: 2.5em
    
.plainLink
  color: inherit
  text-decoration: none
  &:hover
    text-decoration: none

.featureCalloutsContainer
  margin-top: 1em 2em auto
    
.featureCalloutsRow
  --gap: u4
    
.featureCalloutsImage
  height: 70px
  background-size: contain
  background-repeat: no-repeat
  background-position: center
  display: flex
  svg
    height: 100%
    max-width: 100%
  @media(min-width: mediumViewport)
    height: 145px
    padding: u3
    width: 100%
    svg
      height: 100px
      margin: u2 auto 0
    
    
.featureCalloutsHeader
  display: flex
  flex-direction: row
  align-items: center
  @media(min-width: mediumViewport)
    flex-direction: column
    
.featureCalloutsTitle
  font-size: t3
  font-weight: 600
  margin-left: t2
  @media(min-width: mediumViewport)
    margin-top: "-%s" % u3
    margin-bottom: u2
    margin-left: 0
    align-self: flex-start

.unifiedStories
  position: relative
  margin-top: u2
  background: #F5F5F5
  transform: skewY(-2deg)
  width: 100vw
  position: relative
  content: ''
  left: 50%
  right: 50%
  margin-left: -50vw
  margin-right: -50vw
  overflow: hidden

.unifiedStoriesContainer
  display: flex
  flex-direction: column
  max-width: 1207px
  margin: 0 auto
  padding: 0
  
.unifiedStoriesFeatureLabel
  display: inline-block
  padding: u05 u05 0
  border-radius: u05
  text-transform: uppercase
  background-color: #FFE100
  font-weight: bold
  font-size: t1
  margin-bottom: u4
  transform: skewY(2deg)

.unifiedStoriesHeadlineWrap
  background-color: #bdbdbd
  margin: -2em 0
  background-image: url('https://cdn.glitch.com/c258d08b-9412-4115-816c-30444c24e1eb%2Funified-headline-background.svg?v=1561647625197')
  background-size: cover
  background-repeat: no-repeat
  
.unifiedStoriesHeadline
  transform: skewY(2deg)
  padding: u5 u4 u3
  h2
    font-size: t5
    margin: 0
  h2 + h2
    margin-top: u4
  img
    width: 100%
    max-width: 450px
    margin: u4 0
  
.unifiedStoriesPreview
  padding: u4
  margin-right: u4
  transform: skewY(2deg)
  p
    line-height: 1.4

.unifiedStoriesRelatedContent
  padding: u4
  margin-top: u3
  transform: skewY(2deg)
  ul
    margin: 0
    padding: 0
    list-style-type: none
    li
      margin: u3 0
  h3
    text-transform: uppercase
    font-size: t1
    margin-bottom: u3
  h4
    margin: 0
  p
    margin: 0 0 u1
    font-size: t2
    
@media (min-width: mediumViewport)
  .unifiedStoriesContainer
    flex-direction: row
    align-items: flex-start
    flex-wrap: wrap
  .unifiedStoriesHeadlineWrap
    flex: 0 0 100%
  .unifiedStoriesPreview
    flex: 1 1 300px
  .unifiedStoriesRelatedContent
    flex: 0 0 215px

@media (min-width: largeViewport)
  .unifiedStoriesHeadlineWrap
    flex: 0 0 350px
  .unifiedStoriesPreview
    flex: 1 1 100px

.appsWeLoveContainer
  margin-top: 2em
  h4
    margin: u1 0 u05
    font-size: t3
  p
    margin: 0
    color: fg1
    
.appsWeLoveSmallLayout
  .appItem + .appItem
    margin-top: u2
  @media (min-width: mediumViewport)
    display: none
    
.appsWeLoveBigLayout
  display: none
  @media (min-width: mediumViewport)
    display: flex
  
.appsWeLoveList
  margin: 0
  padding: 0
  list-style-type: none
  flex: 1 1 auto

.appItemWrap
  position: relative
  padding: u2 u4 u2 u2
  margin-right: "-%s" %u1
  border-radius: u1 0 0 u1
  &.active
    background-color: #eee

.appItem
  display: flex

.appAvatar
  width: 80px
.appContent
  flex: 1 1 auto
  margin-left: u2
    
.appsWeLoveEmbed
  min-height: 500px
  flex: 0 0 66%
  position: relative
  z-index: 1
  
.profileListPlaceholder
  height: 36px
  display: block
  
.appsWeLoveProfileWrap
  position: absolute
  top: 0
  left: 0
  width: 100%
  z-index: 1
  padding-left: 80px + u2 + u2
  padding-top: u2

.curatedCollectionRow
  --gap: u3

.curatedCollectionsContainer
  margin-top: 2em

.curatedCollectionContainer
  position: relative
  border-radius: u1
  padding: u3
  overflow: hidden
  display: flex
  height: 100%
  
.curatedCollectionTexture
  position: absolute
  transform: rotate(12deg)
  height: 120%
  right: u4
  top: -20px
  
.curatedCollectionText
  z-index: 1
  flex: 1 1 100%
  display: flex
  flex-direction: column
  align-items: flex-start
  margin-right: 20px
  a
    white-space: nowrap
  h4
    margin: 0 0 u3
  p
    font-size: t2
    flex: 1 0 auto

.curatedCollectionUsers
  flex: 1 0 40%
  position: relative
  @media(max-width: mediumViewport)
    max-width: 200px
    max-height: 150px
  @media (min-width: mediumViewport)
    flex: 1 0 30%
    max-height: 150px
  
.userMask
  height: 100%
  max-height: 200px
  position: relative
  @media(max-width: mediumViewport)
    width: 90%
  @media(min-width: largeViewport)
    height: 250%
.userMaskBubbleWrap
  position: absolute
.userMaskBubble
  min-width: 45px
  min-height: 45px
  border-radius: 50%
  background-size: cover
  padding-bottom: 100%
  
.fourBlock
  --gap: u1
  --min-width: 200px

.cultureZine
  position: relative
  padding: 1em 2em
  &:before
    position: absolute
    z-index: -1
    content: ''
    top: 0
    width: 100vw
    height: 100%
    transform: skewY(2deg)
    left: 50%
    right: 50%
    margin-left: -50vw
    margin-right: -50vw
    background-color: #F5F5F5
    background-image: url('https://cdn.glitch.com/c258d08b-9412-4115-816c-30444c24e1eb%2Fculture-zine-pattern.svg?v=1561587572773')
    background-size: cover
    background-repeat: no-repeat

.cultureZineContainer
  max-width: 1207px
  margin: 0 auto
  padding: 0 1em
  
.cultureZineRow
  --min-width: 180px
  position: relative
  
.cultureZineImageWrap
  padding: 0 0 53%
  height: 0    
  
.cultureZineText
  margin-top: -10%
  padding: 12px
  padding-top: 20%
  width: 90%
  margin-left: auto
  margin-right: auto  
  border-radius: u1

  h4
    margin: u1 0
  p
    margin: 0  
    color: tertiary

.buildingOnGlitchRow
  display: flex
  flex-direction: column
  margin: "-%s" % u1
  .startBuildingImageWrap
    background-repeat: no-repeat
    height: 120px
    background-size: inherit
  
  img
    height: 60%
    width: auto
    margin-left: 20px
    margin-top: 10px
  a
    display: block
    margin: u1
    margin-bottom: u4
  h3
    margin-top: 0
    font-size: t4

@media (min-width: mediumViewport)
  .buildingOnGlitchRow
    flex-direction: row
    a
      width: 50%
