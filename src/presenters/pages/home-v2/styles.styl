@import './constants.styl'

.h2
  font-size: t5
  margin: 0 0 u3
  
.h3
  font-size: t4
  margin: 0 0 u3
  font-weight: 600
  
.h4
  font-size: t3
  font-weight: 600

.homeContainer
  section + section
    margin-top: 5em 
    
.subtitle
  margin-left: u3
  margin-bottom: u2
  @media(min-width: mediumViewport)
    margin-bottom: 2.5em
    
.plainLink
  color: inherit
  text-decoration: none
  &:hover
    text-decoration: none

.featureCalloutsContainer
  margin-top: 1em 2em auto
    
.featureCalloutsRow
  --gap: u4
    
.featureCalloutsImage
  height: 70px
  background-size: contain
  background-repeat: no-repeat
  background-position: center
  display: flex
  svg
    height: 100%
    max-width: 100%
  @media(min-width: mediumViewport)
    height: 145px
    padding: u2
    
.featureCalloutsHeader
  display: flex
  flex-direction: row
  align-items: center
  @media(min-width: mediumViewport)
    flex-direction: column
    
.featureCalloutsTitle
  font-size: t3
  font-weight: 600
  margin-left: t2
  @media(min-width: mediumViewport)
    margin-top: "-%s" % u2
    margin-bottom: u2
    margin-left: 0

  
.unifiedStories
  display: flex
  flex-direction: column
  background-color: bg2
  border-radius: u1
  margin-top: u2 !important
  
.unifiedStoriesFeatureLabel
  display: inline-block
  padding: u05 u05 0
  border-radius: u05
  text-transform: uppercase
  background-color: #FFE100
  font-weight: bold
  font-size: t1
  margin-bottom: u4
  
.unifiedStoriesHeadline
  background: #bdbdbd
  padding: u4
  border-top-left-radius: u1
  border-bottom-left-radius: u1
  h2
    font-size: t5
    margin: 0
  h2 + h2
    margin-top: u4
  img
    width: 100%
    max-width: 450px
    margin: u4 0
  
.unifiedStoriesPreview
  padding: u4
  margin-right: u4
  p
    line-height: 1.4

.unifiedStoriesRelatedContent
  padding: u4
  margin-top: u3
  ul
    margin: 0
    padding: 0
    list-style-type: none
    li
      margin: u3 0
  h3
    text-transform: uppercase
    font-size: t1
    margin-bottom: u3
  h4
    margin: 0
  p
    margin: 0 0 u1
    font-size: t2
    
@media (min-width: mediumViewport)
  .unifiedStories
    flex-direction: row
    align-items: flex-start
    flex-wrap: wrap
  .unifiedStoriesHeadline
    flex: 0 0 100%
  .unifiedStoriesPreview
    flex: 1 1 300px
  .unifiedStoriesRelatedContent
    flex: 0 0 215px

@media (min-width: largeViewport)
  .unifiedStoriesHeadline
    flex: 0 0 350px
  .unifiedStoriesPreview
    flex: 1 1 100px

.featuredEmbed
  margin: 0
  background-color: bg1
  border-radius: u1
  position: relative
  margin-bottom: u2
  
.featuredEmbedImg
  max-height: 150px
  position: absolute
  right: 0
  top: "-%s" % u4
  -webkit-mask-image: url(https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-4.svg)
  object-fit: contain
  mask-size: contain
  mask-repeat: no-repeat
  mask-position: center
  mask-type: luminance
  @media(max-width: mediumViewport)
    left: 0
    
.featuredEmbedWrap
  height: 80vh
  max-height: 500px
  padding: 0px u3 u3 u3
  
.featuredEmbedCaption
  width: 55%
  margin-top: u4
  padding: u3
  display: flex
  flex-direction: column
  border-radius: u1
  @media(max-width: mediumViewport)
    width: 100%
    padding-top: 140px
  @media(min-width: largeViewport)
    width: 70%

.featuredEmbedText
  max-width: 100%
  flex: 1 0 auto
  margin-bottom: u3
  h4
    margin-top: 0
  p
    margin: 0
  p + p
    margin-top: u1
  
@media (min-width: mediumViewport)
  .featuredEmbedCaption
    flex-direction: row
  .featuredEmbedProfileWrap
    flex: 0 0 u5

.appsWeLoveContainer
  margin-top: 2em
  h4
    margin: u1 0 u05
    font-size: t3
  p
    margin: 0
    color: fg1
    
.appsWeLoveSmallLayout
  img
    width: 100%
  a + a
    display: block
    margin-top: u2
  @media (min-width: mediumViewport)
    display: none
    
.appsWeLoveBigLayout
  display: none
  @media (min-width: mediumViewport)
    display: flex
  
.appsWeLoveRow
  --gap: 1px
  
.appsWeLoveItem
  padding: u2 u4 u2 u2
  margin-right: "-%s" %u1
  border-radius: u1 0 0 u1
  &.active
    background-color: #eee
  
.appsWeLoveEmbed
  display: block
  flex: 1 0 66%
    
.appsWeLoveProfile
  position: relative
  z-index: 1
  margin-bottom: 3px

.curatedCollectionRow
  --gap: u3

.curatedCollectionsContainer
  margin-top: 2em

.curatedCollectionContainer
  position: relative
  border-radius: u1
  padding: u3
  overflow: hidden
  display: flex
  height: 100%
  
.curatedCollectionTexture
  position: absolute
  transform: rotate(12deg)
  height: 120%
  right: u4
  top: -20px
  
.curatedCollectionText
  z-index: 1
  flex: 1 1 100%
  display: flex
  flex-direction: column
  align-items: flex-start
  margin-right: 20px
  a
    white-space: nowrap
  h4
    margin: 0 0 u3
  p
    font-size: t2
    flex: 1 0 auto

.curatedCollectionUsers
  flex: 1 0 40%
  position: relative
  @media(max-width: mediumViewport)
    max-width: 200px
    max-height: 150px
  @media (min-width: mediumViewport)
    flex: 1 0 30%
    max-height: 150px
  
.userMask
  height: 100%
  max-height: 200px
  position: relative
  @media(max-width: mediumViewport)
    width: 90%
  @media(min-width: largeViewport)
    height: 250%
.userMaskBubbleWrap
  position: absolute
.userMaskBubble
  min-width: 45px
  min-height: 45px
  border-radius: 50%
  background-size: cover
  padding-bottom: 100%
  
.fourBlock
  --gap: u1
  --min-width: 200px

.cultureZineRow
  --min-width: 180px
  
.cultureZineImageWrap
  padding: 0 0 53%
  height: 0    
  
.cultureZineText
  margin-top: -10%
  padding: 12px
  padding-top: 20%
  width: 90%
  margin-left: auto
  margin-right: auto  
  border-radius: u1
  background-color: bg1

  h4
    margin: u1 0
  p
    margin: 0  
    color: tertiary

.buildingOnGlitchRow
  display: flex
  flex-direction: column
  margin: "-%s" % u1
  img
    height: 25%
    width: auto
  a
    display: block
    margin: u1
  h3
    font-size: t4

@media (min-width: mediumViewport)
  .buildingOnGlitchRow
    flex-direction: row
    a
      width: 50%

.previewBanner
  background-color: yellow
  padding: u4 u3
  display: flex
  flex-flow: row wrap
  align-items: center
  margin-top: u1
  p
    margin: 0
    flex: 1 0 auto
    font-size: t4
    font-weight: bold
  & > *
    margin-left: u1
    
    
