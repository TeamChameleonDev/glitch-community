@import './constants.styl'

largeBannerHeight = 440px

.unmarked
  position: relative
  z-index: 1
  
.banner
  display: flex
  flex-direction: column
  align-items: center
  color: white  
  border-radius: u2
  padding: u4 0px
  @media(min-width: mediumViewport)
    flex-direction: row
    padding: u4 0px
    justify-content: flex-start
    
.bannerCopyContainer
  width: 100%
  // max-width: 440px
  padding-top: 11%
  padding-left: 14%
  padding-bottom: u3
  background-position: top center
  background-repeat: no-repeat
  background-size: contain
  background-image: url('https://cdn.glitch.com/2aa144c0-3b44-4c7a-ba20-0de53e442ea7%2Fbanner-small.svg?v=1560449705287')
  h1
    font-size: 6vw
    margin: 0
    transform: rotate(-5deg)
  p
    position: relative
    font-size: 3.5vw
    margin: u3 25% u3 30%
    text-shadow: 1px 1px #6356C7

  @media(min-width: mediumViewport)
    flex: 0 0 440px
    min-height: 400px
    padding-top: 45px
    padding-left: 50px
    background-image: url('https://cdn.glitch.com/2aa144c0-3b44-4c7a-ba20-0de53e442ea7%2Fbanner-large.svg?v=1560449704812')
    h1
      font-size: t6
    p
      font-size: t3
      left: -20px
      margin: u3 auto
      width: 180px

.bannerBtnWrap
  margin-left: 120px
  
.watchVideoBtnWrap
  display: block
  margin: u3 0
  @media(min-width: mediumViewport)
    display: none

.bannerVideoWrap
  background: white
  z-index: 1
  @media(min-width: mediumViewport)
    width: 55%
    margin: "-%s 0" % u5
    border-radius: u1    
  @media(min-width: largeViewport)
    width: 60%
  svg, video
    width: 100%
    display: block
    margin: 0
  
.bannerVideo
  position: relative
  overflow: hidden
  border-radius: 0 0 u1 u1
.bannerVideoButtonWrap
  pointer-events: none
  position: absolute
  text-align: center
  width: 100%
  bottom: 0
  left: 0
  padding-bottom: u4
  
  