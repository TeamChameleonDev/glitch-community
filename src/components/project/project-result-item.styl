@import '../constants.styl'

.projectResult
  padding: 12px 70px 12px 6px
  color: primary
  background-color: primary-background
  position: relative
  &.private
    background-color: private
  &.active
    background-color: general-link
    color: white
  
.resultWrap
  display: flex

.resultInfo
  padding-left: 15px
  width: 100%
  
.resultDescription
  color: secondary
  word-break: break-word
  font-family: monospace
  font-size: 12px
  line-height: 18px
  padding-top: 6px
  
.linkButtonWrap
  position: absolute
  top: 0
  right: 0
  padding: 12px 6px
  
.profileListWrap
  position: relative
  padding-top: 6px
  z-index: 1