.container
  position: relative
  
.controlArea
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  padding-bottom: 12px
  z-index: 1
  &:after
    content: ''
    pointer-events: none
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 350px
    background: linear-gradient(-180deg, rgba(255,255,255,0.00) 0%, #FFFFFF 100%)
    z-index: -1
