// http://www.heydonworks.com/article/the-flexbox-holy-albatross-reincarnated
.row
  list-style-type: none
  margin: 0
  padding: 0
  display: flex
  flex-wrap: wrap
  --gap: 10px
  --min-width: 250px
  --modifier: calc((var(--min-width) * 3) + (var(--gap) * 2) - 100%)
  margin: calc(var(--gap) * -0.5)

.item
  flex-grow: 1
  flex-basis: calc(var(--modifier) * 999)
  margin: calc(var(--gap) * 0.5)