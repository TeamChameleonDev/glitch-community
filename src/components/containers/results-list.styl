@import "../constants.styl"

.scrollContainer
  overflow: scroll
  max-height: 357px

.resultsList
  margin: 0
  padding: 6px
  list-style-type: none
  
.resultItem
  display: block
  border-radius: 3px
  a
    color: inherit
    text-decoration: none
  &:hover,
  &:focus,
  &.active
    background-color: general-link
    color: primary-background
  
.resultItem + .resultItem
  border-top: 1px solid section-line
