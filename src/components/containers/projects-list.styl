@require '../constants'

.projectsContainer
  margin: 0

.projectsList
  align-items: end
  
.header
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 13px
  @media (max-width: smallViewport)
    flex-wrap: wrap
    label
      flex: 100%
      margin-bottom: 15px
      margin-bottom: 15px
      
.viewControls
  display: flex
  justify-content: space-between
  margin-top: 1rem

// hide pagination controls on mobile
.paginationControls
  @media (max-width: mediumViewport)
    display: none
    
.paginationArrow
  margin-bottom: 2px
  &.next
    transform: rotate(180deg)
    
.pageNumbers
  // needs to be static width to so next button doesn't jump around when page changes
  width: 60px
  display: inline-block
  text-align: center
  color: tertiary
  font-size: 14px

.filterResultsPlaceholder
  display: flex
  align-items: center
  img
    width: 60px
    margin-right: 15px