.header
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 13px
  @media (max-width: smallViewport)
    flex-wrap: wrap
    .header-search
      flex: 100%
      margin-bottom: 15px
      
.view-controls
  display: flex
  justify-content: space-between

// hide pagination controls on mobile
@media (max-width: mediumViewport)
  .pagination-controls
    display: none
    
.pagination-arrow
  margin-bottom: 2px
  &.next
    transform: rotate(180deg)
    
.page-numbers
  // needs to be static width to so next button doesn't jump around when page changes
  width: 60px
  display: inline-block
  text-align: center
  color: tertiary
  font-size: 14px

.filter-results-placeholder
  display: flex
  align-items: center
  img
    width: 60px
    margin-right: 15px