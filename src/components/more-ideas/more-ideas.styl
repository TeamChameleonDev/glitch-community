@import '../constants.styl'

.grid
  display: grid
  grid-gap: 10px
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr))
  padding: 0
  list-style-type: none

.link
  background-color: lightgrey
  color: primary
  display: flex
  flex-direction: column
  align-items: center
  justify-content: space-between
  padding: 15px 0
  border-radius: 5px
  font-size: 14px
  font-weight: 600
  height: 160px
    
.image
  flex-grow: 1
  max-height: 95px
  object-fit: scale-down
