.container
  margin: 0
  padding: 0
  list-style-type: none
  display: flex
  flex-flow: row wrap
  align-items: center
  
.teamMember
  margin-right: -7px

.teamMember + li
  margin-left: 10px
.teamMember + li.teamMember
  margin-left: 0
  
.whitelistedDomainIconWrap
  width: 32px
  text-align: center
  
.whitelistedDomain,
.invitedMember,
.addButtonWrap,
.joinButtonWrap
  margin: 0 3px
  
.invitedMember img
  opacity: 0.5
  
.projectsList
  label
    display: flex
    align-items: center
    margin-bottom: 10px
    cursor: pointer
    user-select: none
  input
    width: auto
    margin: 0
    margin-right: 5px
    cursor: pointer
  .projectAvatarWrap
    vertical-align: middle
    margin-right: 5px

  // shrink avatars if there are more than 10 projects
  label:nth-last-child(n+10) // every label at least ten from the end
    &, & ~ label // will style itself and all following labels
      .projectAvatarWrap
        width: 20px
        height: 20px
        
.tinyAvatar
  width: 20px