@import '../../components/constants.styl';

.banner
  display: flex
  flex-direction: column
  align-items: center
  margin: u2 0 u3 0
  padding: u2
  border-radius: u1
  @media (min-width: mediumSmallViewport)
    flex-direction: row
    padding: u3 24px u3 u1  

.illustration
  width: 225px
  padding: u2
  img
    width: 100%
  #hand
    animation: wave cubic-bezier(0.24, 0.45, 1, 1) 2s infinite forwards;
    transform-origin: 51px 121px;
  
.actions
  display: inline-flex
  flex-direction: column
  flex: 1
  align-items: center
  background: rgba(255, 255, 255, .875);
  border-radius: u1
  padding: u2
  @media (min-width: mediumViewport)
    flex-direction: row
    padding: u3 24px u3 u3
  
.create
  width: 100%
  padding: u2
  border-radius: u1
  background: #cbe9ff
  h2
    font-size: 15px
  @media (min-width: mediumSmallViewport)
    width: 235px
    margin: 0 24px 0 0
    
.explore
  flex: 1

.categoriesGrid
  grid-template-columns: repeat(2, 1fr)
  @media (min-width: mediumViewport)
    grid-template-columns: repeat(3, 1fr)
  @media (min-width: hugeViewport)
    grid-template-columns: repeat(6, 1fr)