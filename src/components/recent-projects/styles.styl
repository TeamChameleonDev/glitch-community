@import '../constants.styl'

.anonUserSignUp
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative
  
  button
    margin-right: 3px
    
  button:hover
    background-color: secondary-background-hover

  @media(max-width: 800px)
    width: 100%
    margin-bottom: 1rem
  
  :global .sign-in-pop
    left: 0px
    top: 26px

  
.clearSession
  position: absolute
  top: 16px
  right: 16px
  
.projectsWrap
  display: inline-block
  margin: -1rem
  padding: 0
  width: 78%
  vertical-align: top
  @media(max-width: 800px)
    width: 100%

    
.recent-projects
  .profile-avatar
    display: inline-block
    width: 18%
    margin: 0
    margin-right: 4%
    @media(max-width: 800px)
      display:none
      
  .user-avatar-container
    .user-avatar
      height: 0
      padding-bottom: 100%
      border-radius: 50%
    
  .project
    &:hover,
    &:active
      button
        background-color: cta
    &:after
      border-bottom-color: section-line
