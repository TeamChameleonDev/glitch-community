@require '../constants'

button.btn
  text-align: left
  font-size: 14px
  line-height: 14px
  font-weight: 600
  font-family: sansserif
  background-color: white
  border: solid primary 2px
  display: inline-block
  border-radius: 5px
  padding: 6px 12px
  padding-bottom: 5px
  cursor: pointer
  position: relative
  &.dangerZone
    background-color: warning-background
  &:hover
    background-color: secondary-background
    text-decoration: none
  &:active,
  &.active
    background-color: secondary-background-active
    color: primary


  &[disabled]
    opacity: .5
    pointer-events: none
    color: primary 
    
  &.cta
    color: primary
    background-color: cta
    box-shadow: 4px 4px 0 primary
    margin-bottom: 2px
    &:hover
      background-color: cta
      box-shadow: 2px 2px 0 primary
    &:active
      background-color: cta
      box-shadow: none

  &.small
    font-size: 12px
    padding: 3px 8px
    padding-top: 5px

  &.tertiary
    color: tertiary
    border-width: 1px
    border-color: secondary
    &:hover
      color: primary
      border-color: line-on-secondary-background