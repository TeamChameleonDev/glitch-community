.bookmarkButton {
  padding: 17px 17px 0;
  border: none;
  background: inherit;
  position: relative;
  cursor: pointer;

  .highlight{
    fill: none;
    display: none;
  }
  
  &:focus, &:active, &:active:focus{
    outline: none;
    border: none;
    -webkit-box-shadow: none;
    box-shadow: none;
    .highlight{
      fill: none;
      display: inline;
    }
  }
}

.halo {
  position: absolute;
  left: 6px;
  top: 0px;
  display: none;
}

.check {
  position: absolute;
  width: 13px;
  height: 13px;
  left: 27px;
  top: 27px;
  display: inline-block;
}

.hidden {
  display: none;
}

.checkAnimated {
  display: inline-block;
  animation: scale cubic-bezier(0, 0, 0.2, 1) 0.5s 1;
}

@keyframes scale{
  0%{
    transform: scale(0);
  }
  100%{
    transform: scale(1.0);
  }
}


.haloAnimated {
  display: inline;
}


.halo1{
  opacity: 0;
  animation: halo-1 cubic-bezier(0, 0, 0.2, 1) 1.2s 1;
}

.halo2{
  opacity: 0;
  animation: halo-2 cubic-bezier(0, 0, 0.2, 1) 1.2s 1;
}

.halo3{
  opacity: 0;
