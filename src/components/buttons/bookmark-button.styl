}

.halo5 {
  opacity: 0;
  animation: halo-5 cubic-bezier(0, 0, 0.2, 1) 1.2s 1;
}


@keyframes halo-1{
  0%{
    opacity: 0;
  }
  4%{
    opacity: 1;
  }
  100%{
    opacity: 1;
  }
}

