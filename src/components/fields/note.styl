.descriptionContainer
  width: 80%
  display: inline-block
  padding: 0px 10px
  border-radius: 5px
  font-size: 14px
  min-height: 115px
  margin-bottom: 10px
  word-break: break-word
  margin-bottom: -30px
  &:after
    top: 9px
    left: 78%
    height: 0
    width: 0
    border-width: 7px
    content: ""
    position: absolute
    pointer-events: none
    border: solid transparent
    border-left-color: inherit
  textarea
    margin: 14px 0
    line-height: 20px

.user
  float: right

.dark
  color: white
  
  textarea
    color: white