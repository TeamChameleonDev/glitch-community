@import '../constants.styl';
analytics-app-views-color-color = #9588ea
analytics-remix-color = #23d5e7

.container
  position: relative
  
.section
  margin-left: 1

.section + .section
  margin-top: 1rem
  
.content
  margin-left: 15px
  
.explanation p
  max-width: 600px
  font-size: 14px
  color: secondary
  
.placeholderMask
  position: absolute
  top: 25px
  left: 0
  right: 0
  bottom: 0
  background: linear-gradient(to bottom, rgba(255,255,255,0.2), white)
  pointer-events: none
  
.inlineBanner
  background-color: section-line
  max-width: 325px
  border-radius: 5px
  padding: 12px
  font-size: medium
  font-weight: normal
  display: inline
  margin-left: 10px
  padding: 5px 10px
  border-radius: 3px

.segmentedButtonsWrap
  margin-bottom: 1rem
  
.options
  margin-left: 15px
  display: flex
  :global .down-arrow
    display: inline-block
  & > *
    margin-right: 8px

.projectDetails
  font-size: 14px

.projectDetailsTitle
  margin-bottom: 1rem
  
.projectDetailsTable
  border-collapse: collapse
  margin-top: 0.5rem
  th
    text-align: left
    padding-botom: 3px
    padding-left: 0
    padding-right: 10px
  td
    padding-bottom: 3px
      
.baseProjectAvatar
  width: 16px
  height: 16px
  margin-right: 3px
  vertical-align: text-bottom
    
// ---

.team-analytics
  position: relative
  section
    margin-top: 1rem    
    
  .segmented-buttons-wrap
    margin-bottom: 1rem

  .controls
    margin: 0
    
    .options
      margin-left: 15px
      .down-arrow
        display: inline-block
    
    .button-wrap
      margin-right: 0.5rem
      
  .summary, .activity, .referrers, .project-details, .explanation, .project-remixes-container
    margin-left: 15px
    
  .total
    border-radius: 3px
    padding: 3px 5px
    color: primary-background
    &.app-views    
      background-color: analytics-app-views-color
    &.remixes
      background-color: analytics-remix-color
    
  .activity
    margin-bottom: 0

  progress
    display: block
    width: 100%
    margin-top: 2px
    margin-bottom: 0.5rem
    height: 5px
    
  .referrers
    margin-top: 1rem

  .referrers-content
    display: flex
    @media (max-width: smallViewport)
      display: block
    
  .referrers-column
    width: calc(50% - 20px) // change to 33% when new col added
    margin: 0
    margin-right: 20px
    &.app-views    
      progress
        &::-webkit-progress-value
          background-color: analytics-app-views-color
        &::-moz-progress-bar
          background-color: analytics-app-views-color
    &.remixes
      progress
        &::-webkit-progress-value
          background-color: analytics-remix-color
        &::-moz-progress-bar
          background-color: analytics-remix-color
    // @media (max-width: mediumSmallViewport)
    //   width: calc(50% - 20px)
    @media (max-width: smallViewport)
      width: 100%

  .referrers ul
    padding: 0
    margin: 1rem

  li
    list-style-type: none
    font-size: 14px

    
  h3
    margin-top: 0

  h4
    margin: 0
    margin-left: 1rem

  .project-details
    
      
  .controls,
  .project-details
    button
      margin-left: 0
  
  .project-remixes a
    display: inline-block
