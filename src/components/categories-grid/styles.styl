@import '../constants.styl';

.categoriesGrid
  display: grid
  grid-gap: u3
  padding: 0
  grid-template-columns: repeat(2, 1fr)
  @media (min-width: mediumViewport)
    grid-template-columns: repeat(4, 1fr)
  @media (min-width: largeViewport)    
    grid-template-columns: repeat(8, 1fr)
.categoriesGridItem
  list-style: none
  text-align: center
  background: var(--bg-color);
  border-radius: u05
  font-size: 12px
  font-weight: 600
  a
    display: flex
    width: 100%
    height: 100%
    padding: u2 u1 u1 u1
    color: inherit
  img
    display: block
    max-width: 60px
    height: 50px
    margin: 0 auto u1 auto
  &.alwaysWrap a
    flex-direction: column
    
