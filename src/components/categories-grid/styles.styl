@import '../constants.styl';

.categoriesGrid
  display: grid
  grid-gap: u2
  padding: 0
  grid-template-columns: repeat(auto-fill, minmax(100px, 1fr))
.small
  grid-template-columns: repeat(2, 1fr)
.medium
  grid-template-columns: repeat(4, 1fr)
.categoriesGridItem
  flex-direction: row
  list-style: none
  text-align: center
  background: var(--bg-color);
  border-radius: u05
  font-size: 12px
  font-weight: 600
  a
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    height: 100%
    padding: u1 u2
    color: inherit
  img
    display: block
    height: 35px
    max-width: 45px
    margin-right: u2
  &.alwaysWrap,
  &.wide,
    a    
      padding: u2 u1 u1 u1
      flex-direction: column
      margin: 0 auto u1 auto
    img
      max-width: 60px
      height: 50px
      margin: 0