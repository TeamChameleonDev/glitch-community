.avatarContainer
    border-radius: 5px
    position: relative
    padding: 5px
    width: 150px
    height: 150px
    overflow: hidden
    &.empty
        display: none
    .texture
        position: absolute
        width: 100%
        height: 100%
        transform: rotate(60deg)
    .projectAvatar
        position: absolute
        --size: 60px
        width: var(--size)
        height: var(--size)
        img
            border-radius: 5px
        &:nth-of-type(1)
            bottom: 10%
            right: 10%
        &:nth-of-type(2)
            top: calc(50% - var(--size)/2)
            left: calc(50% - var(--size)/2)
        &:nth-of-type(3)
            top: 10%
            left: 10%
