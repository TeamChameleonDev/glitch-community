@require '../constants'

.collection
  position: relative
  margin-top: 0px
  font-size: 0.9rem
  border-radius: 5px
  min-width: 100%
  transition: 0.1s all
  &.authorized
    margin-top: 30px
  a
    text-decoration: none
    color: primary
  .linkBody
    display: flex
    height: 130px
    padding: 12px
    border-top-right-radius: 5px
    border-top-left-radius: 5px
    &.showCurator:after
      top: 27px
      left: 8.5px
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border-bottom-color: inherit
      border-width: 7px
    .avatarContainer
      flex: 0 0 55px
      margin-right: 1rem
      svg
        width: 100%
        height: auto
    .nameDescriptionContainer
      overflow: hidden
    &:hover
      .nameDescriptionContainer
        .itemButtonWrap
          width: fit-content
          height: fit-content
          box-shadow: 2px 2px 0 primary
          border-radius: 5px
    .projectsContainer
      width: 100%
      height: 150px
      margin: 0
      list-style-type: none
      padding: 0
      padding-top: 1em
      background-color: secondary-background
      .projectItem
        margin: 0 10px -5px
      &.empty
        padding: 18px 18px 0
        border-bottom-right-radius: 5px
        border-bottom-left-radius: 5px
        p
          margin: 0

    .footerLink
      display: block
      min-height: 33px
      padding: 3px 12px 12px
      font-weight: 600
      font-size: 13px
      background-color: secondary-background
      border-bottom-right-radius: 5px
      border-bottom-left-radius: 5px
      &:hover
        text-decoration: underline

.bubbleContainer
  display: block
  position: relative
  color: inherit
  text-decoration: none
  border-radius: 5px
  &:hover
    text-decoration: none
    .itemButtonWrap
      width: fit-content
      height: fit-content
      box-shadow: 2px 2px 0 primary
      border-radius: 5px
  &:after
    content: ""
    position: absolute
    width: 0
    height: 0
    left: 8px
    bottom: 100%
    border-color: inherit
    border-bottom-width: 6px
    border-bottom-style solid
    border-left: 6px solid transparent
    border-right: 6px solid transparent
  
.smallNameDescriptionArea
  padding: 1rem 1rem 0
  
.nameArea
  display: flex
  align-items: flex-start
  
.collectionNameWrap
  padding-top: 4px
  
.description
  font-size: 14px
  padding-bottom: 8px
  p
    margin-bottom: 0
    word-break: break-word
    a
      color: inherit
  
.collectionAvatarContainer
  flex: 0 0 40px
  margin-right: 0.5rem
  svg
    width: 100%
    height: auto
    
.smallProjectCount
  background-color: secondary-background
  padding: 0.5rem
  font-size: 14px
  font-weight: 600
  border-radius: 0 0 5px 5px
  
a:hover .smallProjectCount
  text-decoration: underline

.curator
  height: 32px
  margin-bottom: 0.5rem
  