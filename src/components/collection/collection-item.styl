@require '../constants'

.collection
  margin-top: 0px
  margin-bottom: 1em
  font-size: 0.9rem
  border-radius: 5px
  width: 100%
  padding-bottom: 1.5rem
  height: 320px
  position: relative
  transition: 0.1s all
  overflow: visible
  background-color: secondary-background

  .container
    overflow: hidden
    height: calc(100% + 45px)
    .linkBody
      display: flex
      height: 130px
      padding: 12px
      border-top-right-radius: 5px
      border-top-left-radius: 5px
      text-decoration: none
      .avatarContainer
        flex: 0 0 55px
        margin-right: 1rem
        svg
          width: 100%
          height: auto
    .projectsContainer
      height: 150px
      list-style-type: none
      padding: 0
      padding-top: 1em
      > li
        margin: 0 10px 5px
    .footerLink
      display: block
      padding: 12px
      font-weight: 600
      font-size: 13px

.bubbleContainer
  display: block
  position: relative
  color: inherit
  text-decoration: none
  border-radius: 5px
  &:hover
    text-decoration: none
  &:after
    content: ""
    position: absolute
    width: 0
    height: 0
    left: 8px
    bottom: 100%
    border-color: inherit
    border-bottom-width: 6px
    border-bottom-style solid
    border-left: 6px solid transparent
    border-right: 6px solid transparent
  
.smallNameDescriptionArea
  padding: 1rem 1rem 0
  
.nameArea
  display: flex
  align-items: flex-start
  
.collectionNameWrap
  padding-top: 4px
  
.description
  font-size: 14px
  padding-bottom: 8px
  p
    margin-bottom: 0
    word-break: break-word
    a
      color: inherit
  
.collectionAvatarContainer
  flex: 0 0 40px
  margin-right: 0.5rem
  svg
    width: 100%
    height: auto
    
.smallProjectCount
  background-color: secondary-background
  padding: 0.5rem
  font-size: 14px
  font-weight: 600
  border-radius: 0 0 5px 5px
  
a:hover .smallProjectCount
  text-decoration: underline

.curator
  height: 32px
  margin-bottom: 0.5rem
  