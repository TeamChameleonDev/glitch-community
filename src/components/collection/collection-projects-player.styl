@import "../constants.styl"

// CollectionProjectsPlayer
.playerContainer
  border-bottom: 1px solid
  width: calc(100% + 40px)
  margin: -20px -20px 20px -20px
  &.dark
    color: white

.playerHeader
  padding: 12px
  display: flex

// PlayerControls
.popoverButton
  padding: 0 12px
  border-radius: 3px
  display: flex
  > *
    align-self: center
  background-color: overlay-background
  p 
    padding: 5px
    font-weight: 600
    color: black
  &.dark
    background-color: tertiary
    p
      color: white
  
.playerDescription
  font-size: 14px
  margin-top: -0.2rem
  flex-grow: 2
  margin-left: 20px
  font-family: monospace
  &.dark
    color: white
  @media(max-width: mediumViewport)
    display: none

.projectCounter
  font-size: 14px
  color: tertiary
  align-self: center
  flex-grow: 1
  margin-right: 20px
  text-align: right
  &.dark
    color: white

.projectAvatar
  img
    width: 22px
    height: 22px

.resultListWrapper
  max-height: 400px
  overflow: scroll
  button
    &:hover, &:focus
      background-color: general-link
      color: #fff
      outline: none

.popoverItem
  display: flex
  min-width: 200px
  span 
    align-self: center
  img
    width: 22px
    height: 22px
    margin-right: 5px

.buttonWrap
  margin-left: auto