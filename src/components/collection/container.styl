@import "../constants.styl"

.container
  display: flex
  flex-direction: column
  width: 100%
    
.collectionHeader
  display: flex
  flex: 0 0 auto
  border-radius: 5px 5px 0 0
  flex-direction: column

.collectionHeaderNameDescription
  padding: 20px 20px 0 20px
  position: relative
  display: flex
  flex-direction: row
    
.preview .collectionHeader
  padding: 12px

.dark .collectionHeader
  color: white
  textarea
    color: inherit
  a
    color: #D2FEFF
  code
    background: #252525
    
.collectionContents
  flex: 1 1 auto
  padding: 20px
  background-color: secondary-background
  border-radius: 0 0 5px 5px
  @media (min-width: largeViewport)
    border-radius: 0 5px 5px 0
    
  article
    margin: 0
  p
    margin-bottom: 0

.colorBtnContainer
  padding: 0 25px
  position: absolute
  right: 0

.nameContainer
  flex: 1
  max-width: 200px
  @media (min-width: mediumSmallViewport)
    max-width: 300px
  @media (min-width: mediumLargeViewport)
    max-width: 500px  

.imageContainer
  margin-bottom: 15px
  margin-right: 15px
  svg
    width: 100%
    max-height: 100%
 
.preview .imageContainer
  width: 85px
  height: 75px

.playControlContainer
  background: overlay-background
  padding: 12px 22px

.gridIcon
  height: 1em
  width: 1em
  vertical-align: sub
  margin-right: 5px
  margin-bottom: 2px

.name
  margin: 0
  a
    color: inherit
    
.preview .name
  font-size: 18px

.owner
  margin: 12px 0

.description
  p
    margin: 0
  > * p
    margin: 0 !important

.projectCount
  margin: 25px 0
  font-size: 14px
  font-weight: 600
  
.collectionProjectContainerHeader
  margin-bottom: 1rem
  &:empty
    margin-bottom: 0

.emptyCollectionHint
  margin: 25px 16px
  display: flex
  > * + *
    margin-left: 10px

.hint
  padding: 12px
  background: overlay-background
  border-radius: 5px
  margin: 1em 0
  line-height: 35px
  &.dark
    background:  rgba(109, 109, 109, 0.8)
  p:first-of-type
    display: inline
    margin: 0.5em

.hintBody
  margin: 1em 0

.viewAll
  display: block
  font-weight: 600
  font-size: 13px
  margin-top: 1rem
  color: inherit
  &:hover
    text-decoration: underline !important  

.privacyToggle
  margin-top: 1rem
  
svg.arrow
  vertical-align: middle

.playerContainer
  border: 2px solid
  border-radius: 5px
  max-width: 400px
  &.dark
    color: white

.playerHeader
  padding: 12px
  display: flex

.popoverButton
  display: flex
  > *
    align-self: center
  p 
    padding: 5px

.playerDescription
  background-color: white
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px
  padding: 12px

.popoverItem
  display: flex
  min-width: 200px

  img
    width: 15px
    height: 15px
    margin-right: 5px

.buttonWrap
  margin-left: auto

.resultItemWrapper
  button[data-module="ResultItem"]
    &:hover, &:focus
      background-color: general-link
      color: #fff
      outline: none