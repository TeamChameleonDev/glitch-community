.note
  margin-bottom: -15px
  
.descriptionContainer
  width: calc(100% - 36px)
  position: relative
  display: inline-block
  padding: 0px 10px 20px
  border-radius: 5px
  font-size: 14px
  word-break: break-word
  &:after
    top: 9px
    right: -10px
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border: solid transparent
    border-width: 5px
    border-left-color: inherit
  textarea
    margin: 14px 0
    line-height: 20px
    // we can reduce some of this css after we componentize authdescription/markdowninput
    padding-left: 0
    font-family: Menlo, Consolas, Monaco, "Lucida Console", Monospace
    font-size: inherit
    font-weight: inherit
    cursor: text
    border: none
    border-radius: 0
    border-bottom: 1px solid #b8b8b8
    background: none
    resize: none
    width: 100%
  p 
    margin: 8px 3px
    line-height: 20px
    word-break: break-word
    
.user
  position: absolute
  top: 0
  right: 0
  float: right

.dark
  color: white
  textarea
    color: white
    &::placeholder 
      color: white
      opacity: 1
  a
    color: white
    text-decoration: underline
