@import '../constants.styl'

.container
  display: block
  border-radius: 0.5rem
  background-color: #e5e5e5
  font-size: 14px

.innerWrap
  padding: 12px
  
.mainContent
  display: flex
  align-items: flex-start
  
.avatarWrap
  flex: 0 0 30%
  @media (max-width: mediumSmallViewport)
    flex: 0 0 75px
  
.avatar
  width: 100%
  max-width: 75px
  border-radius: 5px
  
.body
  flex: 1 1 auto
  padding-left: 0.5rem
