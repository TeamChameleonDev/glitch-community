.container
  font-size: 14px
  
.userListContainer
  position: relative
  z-index: 1
  width: 100%
  margin-bottom: 0.5rem
  &:after
    content: ""
    pointer-events: none
    position: absolute
    top: 0
    right: -0.5rem
    width: 5rem
    height: 100%
    background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
    z-index: 1
  
.linkBody
  display: block
  position: relative
  color: inherit
  background-color: #eee
  border-radius: 0.5rem
  padding: 1rem
  &:hover
    text-decoration: none    
  &:after
    content: ""
    position: absolute
    bottom: 100%
    left: 6px
    border-left: 0.5rem solid transparent
    border-right: 0.5rem solid transparent
    border-bottom: 0.5rem solid #eee

.projectHeader
  display: flex
  align-items: flex-start

.nameWrap
  padding-left: 0.5rem