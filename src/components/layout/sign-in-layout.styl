@import '../constants.styl'

.signInBackground
  background-color: #51498b
  position: fixed
  width: 100%
  height: 100%
  background-image: url('https://cdn.glitch.com/0aa2fffe-82eb-4b72-a5e9-444d4b7ce805%2Fsign-in-pattern.svg?v=1574364848746')
  background-repeat: repeat
  background-size: 400px
  @media(prefers-reduced-motion: reduce){
    // static background SVG that doesn't contain animation
    background-image: url('https://cdn.glitch.com/0aa2fffe-82eb-4b72-a5e9-444d4b7ce805%2Fsign-in-pattern-static.svg?v=1574364997266')
  }

.overlay
  position: initial
  max-width: 320px
  transform: inherit
  margin: 0 auto

.signInButtons
  display: inline
  a
    margin-right: 0.5rem

.signInWithGlitchButtons
  margin: 2em 0 0
  button
    display: block
    margin-top: 0.5rem
 
.footer
  display: flex
  flex-direction: row
  align-items: center
  justify-content: flex-end
  padding: 0.5em 0
  
.termsAndConditions
  font-size: 11px
  color: tertiary
  padding: 0.5em 0
  margin: 1em 0 0

.helpText
  margin: 0 0 1em 0

.extra
  background: primary-background
  margin: 1em 0.75em 0 0.75em
  padding: 1em 1em
  border-radius: 5px
  border: 2px solid secondary-background-active