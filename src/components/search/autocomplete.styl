@require '../constants'

.container
  font-size: 13px
  border: 1px solid secondary
  background-color: white
  text-align: left
  border-radius: 3px
  box-shadow: pop-shadow
  
  ul
    margin: 0
    padding: 0
    list-style-type: none
  a
    color: inherit
    text-decoration: none

.popOver
  position: absolute
  overflow: hidden
  width: 100%
  z-index: 2
  
.resultGroupHeader
  background-color: secondary-background
  font-weight: 600
  border-bottom: 1px solid secondary
  padding: 4px 10px 0
  margin: 0 auto
  
.resultItem
  border-bottom: 1px solid secondary
  padding: 6px 12px
  &:hover, &:focus
    background-color: secondary-background-hover

.resultContainer
  display: flex
  flex-direction: row
  align-items: center

.avatarContainer
  flex: 0 0 40px
  padding-right: 4px
  img
    display: block

.infoContainer
  flex: 1 1 auto
  overflow: hidden

.infoPrimary
  font-weight: 600
  
.infoSecondary
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.memberContainer
  flex: 0 0 100px
  padding-left: 4px

.seeAllResults
  display: block
  font-weight: 600
  padding: 6px 12px
  &:hover, &:focus
    background-color: secondary-background-hover
