@import '../constants'

.container
  color: inherit
  text-decoration: none
  &:hover
    text-decoration: none

.imageWrap
  position: relative
  height: 170px
  margin-bottom: -70px
  z-index: 1
    
.contentWrap
  padding: 78px 8px 8px
  border-radius: 5px
  h3
    margin-top: 0
  p
    margin-bottom: 0
  
// mask image

.maskImage
  width: auto
  height: 100%
  object-fit: contain
  mask-type: luminance
  mask-repeat: no-repeat
  mask-position: center
  mask-size: contain
  mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-4.svg")