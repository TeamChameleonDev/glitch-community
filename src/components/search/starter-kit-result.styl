@import '../constants'

.container
  color: inherit
  text-decoration: none
  &:hover
    text-decoration: none

.imageWrap
  position: relative
  height: 170px
  &:before
    content: ""
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 33%
    background-color: #e5e5e5
    border-radius: 5px 5px 0 0
    
    
.contentWrap
  padding: 4px 8px 8px
  background-color: #e5e5e5
  border-radius: 0 0 5px 5px
  h3
    margin-top: 0
  p
    margin-bottom: 0
  
// mask image

.maskImage
  object-fit: contain
  mask-type: luminance
  mask-repeat: no-repeat
  mask-position: center
  mask-size: contain
  mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-4.svg")