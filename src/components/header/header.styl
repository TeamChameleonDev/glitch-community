.header
  display: flex
  flex-direction: row
  justify-content: space-between
  :global
    .user
      padding: 0
      display: inline-block
      padding-right: 5px
      border: none
      min-width: 48px
      img
        width: 28px
        height: auto
        position: relative
        display: inline
        vertical-align: middle
        border-radius: 50%
      

    .user-options-pop-button
      border: 0
      padding: 0
      cursor: pointer
      display: inline-block
      position: relative
      &:hover
      &:focus
        opacity: 1;
        background-color: #eaeaea;
        border-radius: 5px;
        border: none;
        outline: transparent
        .down-arrow
          opacity: 1
  
.logoWrap
  flex: 0 0 70px
  margin-right: 10px

.logo
  width: 100%

.headerActions
  flex: 1 1 auto

.searchWrap
  position: relative
  width: 100%
  max-width: 250px
  margin-left: auto
  
.buttons
  padding: 0
  margin: 8px 0 0
  list-style-type: none
  display: flex
  flex-direction: row
  align-items: flex-start
  justify-content: flex-end
  
.buttonWrap
  margin-left: 10px 
