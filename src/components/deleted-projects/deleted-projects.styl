@import '../constants.styl'

deleted-project-avatar-size = 32px

.deletedProjectsContainer
  margin: 0 0 1rem
  padding: 0
  list-style-type: none
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(225px, 1fr))
  grid-gap: 10px
    
.deletedProject
  background-color: section-line
  border-radius: 5px
  padding: 12px

// ugh
.buttonWrap > *
  margin-bottom: 0 !important

.avatar
  border-radius: 5px
  width: deleted-project-avatar-size
  height: deleted-project-avatar-size
  margin-right: 12px
  float: left

.projectName
  min-height: deleted-project-avatar-size
  margin-bottom: 6px
  font-weight: 600
  font-size: 14px
  display: flex
  flex-direction: column
  justify-content: center  
