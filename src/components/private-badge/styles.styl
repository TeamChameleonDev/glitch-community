@import '../constants.styl' 

.projectBadge
  display: inline-block
  width: 22px
  height: 20px
  margin-right: 4px
  border-radius: 3px
  vertical-align: middle
  >*
    left: 3px
    top: 1px
  &.private
    background-color: private
    color: private-foreground
  &.public img
    opacity: 0.7

.button
  border: 1px solid secondary
  cursor: pointer