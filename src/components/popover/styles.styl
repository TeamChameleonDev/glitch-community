@import "../constants.styl"

.popoverWrap
  position: absolute
  width: 255px
  right: 0
  &.wide
    width: 350px
  
.popover
  position: relative
  margin: 0
  padding: 0
  display: block
  width: 100%
  text-align: left
  background-color: primary-background
  font-size: 14px
  cursor: initial
  border-radius: 3px
  border: 1px solid secondary
  box-shadow: pop-shadow
  z-index: 10

.popoverInfo,
.popoverActions,
.popoverTitle,
.infoDescription
  display: block
  margin: 0
  padding: 0
  
.popoverInfo,
.popoverActions
  border-top: 1px solid secondary
  &:last-child
    border-top: none