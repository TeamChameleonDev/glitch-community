.controls
  display: flex
  justify-content: space-between
  margin: 1rem 0 2rem 0

// hide pagination controls on mobile
.paginationControls
  display: none
  @media (min-width: mediumViewport)
    display: block
    
.paginationArrow
  margin-bottom: 2px
  &.next
    transform: rotate(180deg)

.pageNumbers
  // needs to be static width to so next button doesn't jump around when page changes
  width: 60px
  display: inline-block
  text-align: center
  color: tertiary
  font-size: 14px
