@import '../constants.styl'

.userResult
  padding: 12px 70px 12px 6px
  color: primary
  background-color: primary-background
  position: relative
  &.active,
  &:hover,
  &:focus
    color: white
    background-color: general-link
    .resultDescription
      color: secondary-hover-on-color

.userResult > button
  color: inherit
    
.resultWrap
  display: flex

.resultInfo
  padding-left: 15px
  width: 100%
  
.active .resultName
  color: inherit
  
.resultDescription
  color: text-on-secondary-background
  word-break: break-word
  font-family: monospace
  font-size: 12px
  line-height: 18px
  padding-top: 6px