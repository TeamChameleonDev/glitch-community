@require '../../../styles/globals'

button
  text-align: left
  font-size: 14px
  line-height: 14px
  font-weight: 600
  background-color: white
  border: solid primary 2px
  display: inline-block
  border-radius: 5px
  padding: 6px 12px
  padding-bottom: 5px
  cursor: pointer
  position: relative
  &.danger-zone
    background-color: warning-background
  &:hover
    background-color: secondary-background
    text-decoration: none
  &:active,
  &.active
    background-color: secondary-background-active
    color: primary
  &.has-emoji
    padding-top: 5px
    padding-bottom: 5px
  img
    vertical-align: bottom

  &[disabled]
    opacity: .5
    pointer-events: none
    cursor: pointer
    color: primary 
    
  &.cta
    color: primary
    background-color: cta
    box-shadow: 4px 4px 0 primary
    margin-bottom: 2px
    &:hover
      background-color: cta
      box-shadow: 2px 2px 0 primary
    &:active
      background-color: cta
      box-shadow: none

  &.small
    font-size: 12px
    padding: 3px 8px
    padding-top: 5px
    &.has-emoji
      padding-top: 3px
      padding-bottom: 3px
      .status-badge
        margin-right: 3px
    .loader
      width: 15px
      height: 15px
      margin-right: 0
    .status-badge
      display: inline
      margin-left: 1px

  &.tertiary
    color: tertiary
    border-width: 1px
    border-color: secondary
    cursor: pointer
    display: inline-block
    .loader
      width: 13px
      height: 13px
      margin-right: 0
    &:hover
      color: primary
      border-color: line-on-secondary-background
    .status-badge
      display: inline
      margin-left: 4px