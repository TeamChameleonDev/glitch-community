button 
  text-align: left;
  font-size: 14px;
  line-height: 14px;
  font-weight: 600;
  background-color: #fff;
  border: solid #222 2px;
  display: inline-block;
  border-radius: 5px;
  padding: 6px 12px;
  padding-bottom: 5px;
  cursor: pointer;
  position: relative;
  /*vertical-align: middle;*/

  &:hover, &.hover 
    background-color: #f5f5f5;
    text-decoration: none;

  &.cta {
    color: #222;
    background-color: #83ffcd;
    -webkit-box-shadow: 4px 4px 0 #222;
    box-shadow: 4px 4px 0 #222;
    margin-bottom: 2px;
  }

  &.cta:hover, &.cta.hover
    background-color: #83ffcd;
    -webkit-box-shadow: 2px 2px 0 #222;
    box-shadow: 2px 2px 0 #222;

  .small {
    font-size: 12px;
    padding: 3px 8px;
    padding-top: 5px;

button.tertiary {
    color: #636363;
    border-width: 1px;
    border-color: #c3c3c3;
    cursor: pointer;
    display: inline-block;
}

button.tertiary:hover {
    color: #222;
    border-color: #b8b8b8;
}