{
  "install": {
    "include": [
      "^package\\.json$",
      "^\\.env$"
    ]
  },
  "restart": {
    "exclude": [
      "^src/",
      "^styles/"
    ],
    "include": [
      "^server/",
      "^shared/",
      "^views/",
      "\\.json$",
      "\\.eslintrc\\.js$",
      "\\.babelrc"
    ]
  },
  "throttle": 100
}
